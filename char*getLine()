#include <stdio.h>
#include <stdlib.h>
char* getLine() {
    char *str = NULL;
    int size = 0, capacity = 2;
    char ch;
    str = (char *)malloc(capacity * sizeof(char));
    if (!str) return NULL;

    while ((ch = getchar()) != '\n' && ch != EOF) {
        str[size++] = ch;
        if (size == capacity) {
            capacity *= 2;
            str = (char *)realloc(str, capacity * sizeof(char));
            if (!str) return NULL;
        }
    }
    str[size] = '\0';  
    return str;   
}
int main() {
    printf("Program by: Madhurya\n");
    printf("USN: 1SV24CS066\n\n");

    printf("Enter a line: ");
    char *line = getLine();

    if (line) {
        printf("\nYou entered: %s\n", line);
        free(line);  // Free allocated memory
    } else {
        printf("Memory allocation failed.\n");
    }
    return 0;
}
